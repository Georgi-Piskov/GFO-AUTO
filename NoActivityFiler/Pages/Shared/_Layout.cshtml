@{
    var title = ViewData["Title"] as string ?? "NoActivityFiler";
}
<!DOCTYPE html>
<html lang="bg">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        body { padding-top: 1rem; }
        .toast-container { position: fixed; top: 1rem; right: 1rem; z-index: 1080; }
    </style>
    @RenderSection("Head", required: false)
    <partial name="_CookieConsentPartial" />
    <environment include="Development">
    </environment>
    <environment exclude="Development">
    </environment>
    <script>
        window.copyText = async function (id) {
            const el = document.getElementById(id);
            if (!el) return;
            try { await navigator.clipboard.writeText(el.value || el.innerText || el.textContent); showToast('Текстът е копиран.'); } catch { showToast('Копиране неуспешно.'); }
        };
        function showToast(msg) {
            const toastEl = document.getElementById('copyToast');
            toastEl.querySelector('.toast-body').textContent = msg;
            const t = bootstrap.Toast.getOrCreateInstance(toastEl);
            t.show();
        }
    </script>
</head>
<body>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div class="toast-container">
        <div id="copyToast" class="toast" role="alert" aria-live="polite" aria-atomic="true" data-bs-delay="1800">
            <div class="toast-body">Копирано</div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <partial name="_ValidationScriptsPartial" />
    @RenderSection("Scripts", required: false)
</body>
</html>

